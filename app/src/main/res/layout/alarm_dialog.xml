<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alarmlogorv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_notifications_black_24dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />


            <RelativeLayout
                android:id="@+id/alarmdialoginterface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/alarmlogorv"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:id="@+id/editnametext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        />
                    <EditText
                        android:id="@+id/editname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/editnametext"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:id="@+id/intervaltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interval"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        />
                    <EditText
                        android:id="@+id/alarmintervaledit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/intervaltext"
                        android:layout_toLeftOf="@id/intervalspinner"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                    <Spinner
                        android:id="@+id/intervalspinner"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:entries="@array/timespinner"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/adjusttime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting from:"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/interval"
                    />
                <TextView
                    android:id="@+id/adjusttime_centerdivide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="35dp"
                    android:layout_marginTop="77dp"
                    android:layout_below="@id/adjusttime_text"
                    android:layout_centerHorizontal="true"
                    />
                <com.yanzhenjie.wheel.WheelView
                    android:id="@+id/hours_wheelview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/adjusttime_text"
                    android:layout_marginTop="20dp"
                    android:layout_alignRight="@id/adjusttime_centerdivide"
                    android:layout_marginRight="20dp"
                    />
                <com.yanzhenjie.wheel.WheelView
                    android:id="@+id/minutes_wheelview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/adjusttime_text"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignLeft="@id/adjusttime_centerdivide"
                    android:layout_marginLeft="20dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/weekdayspicktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Days:"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/alarmdialoginterface"
                />

            <com.dpro.widgets.WeekdaysPicker
                android:id="@+id/weekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekdayspicktext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    </ScrollView>