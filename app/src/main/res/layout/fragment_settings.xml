<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <Button
        android:id="@+id/tutorialbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show tutorial again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        />


    <TextView
        android:id="@+id/alarmtypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Type: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tutorialbutton"
        />

    <Spinner
        android:id="@+id/alarmtypespinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tutorialbutton"
        android:layout_toRightOf="@id/alarmsoundtext"
        android:entries="@array/alarmtype"
        />

    <TextView
        android:id="@+id/alarmsoundtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Sound: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/alarmtypetext"
        />

    <Spinner
        android:id="@+id/alarmsoundspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/alarmtypespinner"
        android:layout_toRightOf="@id/alarmsoundtext"
        android:entries="@array/alarmsound"
        />


</RelativeLayout>